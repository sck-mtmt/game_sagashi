<h1>ユーザー編集</h1>
<%= form_with model: @user,url: admin_user_path,method: :patch do |f| %>

<%= f.label :nick_name,"ニックネーム" %>
<%= f.text_field :nick_name %><br>
<%= f.label :birth_date,"生年月日" %>
<%= f.date_select :birth_date, use_month_numbers: true,
    start_year: 1930, end_year: (Time.now.year - 10),
    default: Date.new(1989, 1, 1) %><br>
<%= f.label :gender,"性別" %><br>
    <%= f.label :男性 %>
    <%= f.radio_button :gender, :"man" %>
    <%= f.label :女性 %>
    <%= f.radio_button :gender, :"woman" %>
    <%= f.label :未回答 %>
    <%= f.radio_button :gender, :"unanswered" %><br>
    <%= f.label :email,"メールアドレス" %>
<%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
<%= f.submit'編集内容を保存', class: "btn btn-success" %>
<% end %>