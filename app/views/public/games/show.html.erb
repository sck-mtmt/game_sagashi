<h1>ゲーム詳細</h1>

<%= @game.game_title %><br>
<!--<amazonのAPIをいれて画像表示させたい>-->
<h5>ゲーム概要</h5>
<%= @game.game_description %><br>
<h5>ゲーム機種</h5>
<%= @game.game_model %><br>
<h5>ゲーム価格</h5>
<%= @game.price %>円<br>

<%= form_with model: @game, url:public_reviews_path, method: :post do |f| %>
<%= f.select :amount, *[1..10] %>
<%= f.hidden_field :game_id, :value => @game.id %>
<%= f.submit "投稿する" %>
