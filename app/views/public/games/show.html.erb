<div class="container">
  <div class="row">
    <div class=title>
      <h3>ゲーム詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
      <h3><%= @game.game_title %></h3>
  </div>
  <div class="row">
    <div class="col-5">
      <div class="no-image-box">
        <h1><p>NoImage</p></h1>
      </div>
    </div>
    <div class="game-show">
      <div class="col-12">
        <div class="row">
            <h5>ゲーム概要:<%= @game.game_description %></h5>
        </div>
        <div class="row">
            <h5>ゲーム機種:<%= @game.game_model %></h5>
        </div>
        <div class="row">
            <h5>ゲーム価格:<%= @game.price %>円(税込)</h5>
        </div>
      </div>
    </div>
  </div>
    <!--投稿することによってレビューできるようになる。マイページへ登録画面がいく-->
  <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <div class="game-show-question">
          <h3>-----------なぜ興味を持ったのか教えてください-----------</h3>
        </div>
      </div>
      <div class="col-2"></div>
  </div>
  <div class="row">
    <div class="col-xs-3 col-lg-3"></div>
      <%= form_with model: @review, url:public_users_my_page_path, method: :post do |f| %>
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
                        <%= tag.check_box %>
                        <%= tag.text %>
            <% end %>
            <%= f.hidden_field :game_id, :value => @game.id %>
  </div>
  <div class="row">
    <div class="col-4"></div>
        <%= f.submit '投稿', class:'btn btn-primary w-25' %>
      <% end %>
  </div>
</div>