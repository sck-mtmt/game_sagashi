<h1>ユーザー一覧</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to admin_user_path(user.id) do %>
          <%= user.nick_name %>
          <% end %></td>
      <td><%= user.email %></td>
      <td><% if user.is_deleted %>
          <font color="silver">退会</font>
          <% else %>
          <font color="green"><strong>有効</strong></font>
          <% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
