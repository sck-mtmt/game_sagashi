<div class="container">
  <div class="row">
    <div class=title>
      <h3>ユーザー一覧</h3>
    </div>
  </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to admin_user_path(user.id) do %>
              <%= user.nick_name %>
              <% end %></td>
          <td><%= user.email %></td>
          <td><% if user.is_deleted %>
              <font color="silver">退会</font>
              <% else %>
              <font color="green"><strong>有効</strong></font>
              <% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
</div>
