<div class="container">
  <div class="row">
    <div class=title>
      <h3>ゲーム新規登録</h3>
    </div>
  </div>


    <%= form_with model: @game, url:admin_games_path, method: :post do |f| %>
    　<%= f.label :ゲームタイトル %>
      <%= f.text_field :game_title %><br>
      <%= f.label :ゲーム概要 %>
      <%= f.text_area :game_description %><br>
      <%= f.label :価格 %>
      <%= f.text_field :price %>円(税込)<br>
      <%= f.label :機種 %>
      <%= f.select :game_model, Game.game_models.keys, {prompt: '機種を選択してください'} %><br>
      <%= f.label :容量 %>
      <%= f.text_field :capacity %>GB<br>
      <%= f.label :公開ステータス %>
      <%= f.radio_button :is_active, true %>公開中
      <%= f.radio_button :is_active, false %>未公開<br>
      <%= f.submit '新規登録', class:"btn btn-primary" %><br>
    <% end %>
</div>