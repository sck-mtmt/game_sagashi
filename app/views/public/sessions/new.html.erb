<div class="container">
  <div class="row">
    <div class="col-3"></div>
      <h3>会員の方はこちらからログインお願いします</h3>
  </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-2"></div>
      <%= f.label :メールアドレス %>
      <div class="col-1"></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
    </div>
    <div class="row">
      <div class="col-2"></div>
      <%= f.label :パスワード　　 %>
      <div class="col-1"></div>
      <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
    </div>
    <div class="row">
      <div class="col-4"></div>
      <%= f.submit "ログイン", class: "btn btn-primary w-25" %>
    </div>
      <% end %>
</div>
