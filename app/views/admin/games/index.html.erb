<h1>ゲーム一覧</h1>
<p><%= link_to "ゲーム新規登録へ",new_admin_game_path %></p>

<table class="table">
  <thead>
    <tr>
      <th>ゲーム名</th>
      <th>ゲーム概要</th>
      <th>価格</th>
      <th>機種</th>
      <th>容量</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= link_to admin_game_path(game.id) do %>
          <%= game.game_title %>
          <% end %></td>
      <td><%= game.game_description %></td>
      <td><%= game.price %>円</td>
      <td><%= game.game_model %></td>
      <td><%= game.capacity %>KB</td>
      <td><% if game.is_active %>
          公開中
          <% else %>
          未公開
          <% end %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>
