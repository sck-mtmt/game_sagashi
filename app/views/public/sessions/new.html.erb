<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="login">
      <h3>会員の方はこちらからログインお願いします</h3>
    </div>
  </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-3"></div>
      <div class="form-group">
        <%= f.label :メールアドレス %>:

        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 60 %>
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <div class="form-group">
        <%= f.label :パスワード　　%>:

        <%= f.password_field :password, autocomplete: "current-password", size: 60 %>
      </div>
    </div>
    <div class="row">
      <div class="col-5"></div>
      <%= f.submit "ログイン", class: "btn btn-primary w-25" %>
    </div>
    <% end %>
</div>
