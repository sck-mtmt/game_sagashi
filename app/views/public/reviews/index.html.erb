<h1>レビュー一覧</h1>
<table>
    <thead>
        <tr>
            <th>ゲームタイトル</th>
            <th>レビュータイトル</th>
            <th>詳細・投稿</th>
        </tr>
    </thead>
    <tbody>
        <% @reviews.each do |review| %>
        <tr>
            <td><%= review.game.game_title %></td>
            <td><%= review.review_title %></td>
        </tr>
        <% end %>
    </tbody>
</table>
