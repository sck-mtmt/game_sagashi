<h3><%= @review.game.game_title %></h3>

<% #APIでの画像 %>
<h5>投稿のあるタグ集計</h5>
<% Tag.all.each do |tag| %>
    <%= tag.name %>: <%= tag.reviews.count %>件<br>
<% end %>

<% @reviews.each do |review| %><br>
  <% if review.star.present? %>
    <%= review.user.nick_name %><br>
    <%= review.review_title %><br>
    <div>
      <h8>総合評価：
        <span class="star-rating">
          <span class="star-rating-front" style="width: <%= getPercent(review.star) %>%;">★★★★★</span>
          <span class="star-rating-back">★★★★★</span>
        </span>
      </h8>
    </div><br>
    <%= review.review_body %><br>
  <% end %>
<% end %>
<% #コメント機能 %>
<div>
  <p>コメント件数：<%= @review.post_comments.count %></p>
  <% @review.post_comments.each do |post_comment| %>
    <%= post_comment.user.nick_name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "コメント削除", public_review_post_comment_path(post_comment.review, post_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@review, @post_comment],url: public_review_post_comments_path(@review.id),method: :post do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>