<!DOCTYPE html>
<html>
  <head>
    <title>GameSagashi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
    <% if admin_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
      <li>
        <%= link_to "会員一覧", admin_users_path %>
      </li>
      <li>
        <%= link_to "レビュー一覧", admin_root_path %>
      </li>
      <li>
        <%= link_to "ゲーム一覧", admin_games_path %>
      </li>

    <% elsif user_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
      <li>
        <%= link_to "ゲーム一覧", public_games_path %>
      </li>
      <li>
        <%= link_to "マイページ", public_users_my_page_path %>
      </li>
      <li>
        <%= link_to "レビュー一覧", public_reviews_path %>
      </li>
    <% else%>
      <li>
        <%= link_to "ゲーム一覧", public_games_path %>
      </li>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
      <li>
        <%#= link_to 'ゲストログイン（閲覧用）', public_homes_guest_sign_in_path, data: { turbo_method: :post } %>
      </li>
    <% end %>
    </header>
  </body>
  <%= yield %>
</html>
