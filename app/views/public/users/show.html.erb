<div class="container">
  <div class="row">
    <div class="title">
      <h3>マイページ</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <h3><span>登録内容</span></h3>
        <h6>ユーザーID:
          <%= @user.id %></h6>
        <h6>ニックネーム:
          <%= @user.nick_name %></h6>
        <h6>生年月日:
          <%= @user.birth_date.strftime("%Y年%m月%d日") %></h6>
        <h6>性別:
          <%= @user.gender_i18n %></h6>
        <h6>メールアドレス:
          <%= @user.email %></h6>
        <h6>ゲームチェック済み:
          <%= @reviews_of_checked_games.count %>件</h6>
        <h6>ゲームクリア済:
          <%= @reviews_of_cleared_games.count %>件</h6>
        <%= link_to "登録編集", public_users_my_page_edit_path, class:"btn btn-primary " %>
        <%= link_to "退会する", public_users_unsubsscribe_path, class:"btn btn-danger" %>
  </div>
  <div class="col-4">
      <!--投稿したゲームデータが入る-->
      <h3><span>ゲームチェック済一覧</span></h3>
        <% @reviews_of_checked_games.each do |review| %>
          <% unless review.star.present? %>
            <h6>ゲームタイトル：
              <%= review.game.game_title %></h6>
            <h6>投稿日：
              <%= review.created_at.strftime('%Y年%m月%d日') %></h6>
            <%= link_to "レビューする", edit_public_review_path(review.id), class:"btn btn-primary w-50" %>
          <% end %>
        <% end %>
  </div>
  <div class="col-4">
      <!--レビューしたゲームデータが入る-->
      <h3><span>ゲームクリア済一覧</span></h3>
        <% @reviews_of_cleared_games.each do |review| %>
          <% if review.star.present? %>
            <h6>クリアレビュー日:
            <%= review.updated_at.strftime('%Y年%m月%d日') %></h6>
            <h6><%= review.game.game_title %></h6>
            <div>
              <h6>評価：
                <span class="star-rating">
                  <span class="star-rating-front" style="width: <%= getPercent(review.star) %>%;">★★★★★</span>
                  <span class="star-rating-back">★★★★★</span>
                </span>
              </h6>
            </div>
            <h6>レビュータイトル：
            <%= review.review_title %></h6>
            <h6>レビュー文：
            <%= review.review_body %></h6>
              <% if review.user == current_user %>
                <%= link_to "レビュー削除", public_review_path(review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:'btn btn-danger w-50' %>
              <% end %>
          <% end %>
        <% end %>
  </div>
</div>
