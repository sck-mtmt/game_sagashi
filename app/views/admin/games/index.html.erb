<div class="container">
  <div class="row">
    <div class=title>
      <h3>ゲーム一覧</h3>
    </div>
  </div>
      <p><%= link_to "ゲーム新規登録へ",new_admin_game_path, class:"btn btn-success" %></p>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ゲーム名</th>
            <th>ゲーム概要</th>
            <th>価格</th>
            <th>機種</th>
            <th>容量</th>
            <th>公開ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
          <tr>
            <td><%= link_to admin_game_path(game.id) do %>
                <%= game.game_title %>
                <% end %></td>
            <td><%= game.game_description %></td>
            <td><%= game.price %>円（税込）</td>
            <td><%= game.game_model %></td>
            <td><%= game.capacity %>GB</td>
            <td><% if game.is_active %>
                  公開中
                <% else %>
                  未公開
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  <%= paginate @games %>
</div>
